<!DOCTYPE html>
<html>
<head>
  <title>Socialtv</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= yield :after_body %>
  <div class="navbar navbar-static-top navbar-inverse">
    <div class="navbar-inner">
      <a class="brand" href="#">SocialTv</a>
      <%= yield :navbar_left %>
      <% if current_user %>
        <ul class="nav pull-right" id="settings">
        <%= yield :navbar_right %>
        <li id="fetch_image_active" class="hide"><a href="#"><%= image_tag("fetch_active.gif") %></a></li>
        <li id="fetch_image_inactive"><a href="#" onClick="fetchUser();"><%= image_tag("fetch_inactive.png") %></a></li>
        <li><a href="#" onClick="showSettings();"><%= image_tag("settings.png") %></b></a></li>
        </ul>
      <% else %>
        <ul class="nav pull-right" id="signin">
          <li class="sign_in"><%= link_to "Sign in with fb", "/auth/facebook" %></li>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <%= yield %>
    </div>
  </div>
</body>
</html>
