<!DOCTYPE html>
<html>
<head>
  <title>Socialtv</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= yield :after_body %>
  <div class="navbar navbar-static-top navbar-inverse">
    <div class="navbar-inner">
      <a class="brand" href="#">SocialTv</a>
      <%= yield :navbar_left %>
      <ul class="nav pull-right">
        <% if current_user %>
        <%= yield :navbar_right %>
        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">S</a></li>
        <ul class="dropdown-menu">
          <li><a href="/auth/facebook">Facebook</a></li>
          <li><a href="/auth/youtube">Youtube</a></li>
          <li><a href="/settings">Settings</a></li>
          <li><a href="/signout">Log out</a></li>
        </ul>
        <% else %>
        <li class="sign_in"><%= link_to "Sign in with fb", "/auth/facebook" %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <%= yield %>
    </div>
  </div>
</body>
</html>
