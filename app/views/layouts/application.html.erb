<!DOCTYPE html>
<html>
<head>
  <title>Socialtv</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= yield :after_body %>
  <% if current_user %>
    <div class="navbar navbar-static-top navbar-inverse">
      <div class="navbar-inner">
        <a class="brand" href="#">SocialTv</a>
        <%= yield :navbar_left %>
        <ul class="nav pull-right" id="settings">
          <%= yield :navbar_right %>
          <li class="navicon" id="fetch_image_inactive"><a href="#" onClick="fetchUser();"><i class="icon-refresh icon-white"></i></a></li>
          <li class="navicon">
            <a href="#" onClick="showSettings();"><i class="icon-wrench icon-white"></i></a>
          <li class="navicon">
            <a href="signout"><i class="icon-off icon-white"></i></a>
          </li>
        </ul>
     <% end %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <%= yield %>
    </div>
  </div>
</body>
</html>
